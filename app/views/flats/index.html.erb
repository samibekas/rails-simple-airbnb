
<div class="container">
  <h1>All our Flats</h1>

    <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
          <div class="card">
            <div class="flat-card-image" style="background-image: url(<%= flat.image_url %>)">
            </div>
            <div class="flat-card-description">
              <h4><%= flat.name %></h4>
              <p class="truncate"><%= flat.description %></p>
              <i class="fas fa-bed"></i><%= flat.number_of_guests %>
              <i class="fas fa-euro-sign"></i><%= flat.price_per_night %>
            </div>
            <div class="flat-card-cta">
              <%= link_to "More info", flat_path(flat), :class => "more-info" %>
              <%= link_to "Edit", edit_flat_path(flat), :class => "edit" %>
              <%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" }, :class => "delete" %>
            </div>

          </div>
        </div>
    <% end %>
  </div>
</div>

